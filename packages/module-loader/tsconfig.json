{
    "compilerOptions": {
        "outDir": "./dist"
    },
    "extends": "../../tsconfig.base.json",
    "include": [
        "./src",
        "./test"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "typedocOptions": {
        "entryPoints": [
            "src/index.ts"
        ],
        "out": "../../docs/module-loader",
        "plugin": "typedoc-plugin-markdown",
        "excludePrivate": "true",
        "gitRevision": "HEAD",
        "sort": "alphabetical"
    }
}
