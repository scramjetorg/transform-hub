{
  "name": "@scramjet/adapters",
  "version": "0.15.0",
  "description": "This package is part of Scramjet Transform Hub. This module holds the docker adapters utilized by Scramjet Transform Hub",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/index",
    "build": "tsc -p tsconfig.build.json",
    "build:docs": "typedoc",
    "clean": "rm -rf ./dist .bic_cache",
    "cloc": "cloc src --fullpath --include-lang TypeScript --not-match-d \"(node_modules|test|dist|bdd)\" --by-percent cm",
    "test": "nyc ava",
    "prepack": "node ../../scripts/publish.js",
    "postbuild": "yarn prepack"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/model": "^0.15.0",
    "@scramjet/obj-logger": "^0.15.0",
    "@scramjet/runner": "^0.15.0",
    "@scramjet/sth-config": "^0.15.0",
    "@scramjet/symbols": "^0.15.0",
    "@scramjet/utility": "^0.15.0",
    "dockerode": "^3.3.0",
    "scramjet": "^4.36.0",
    "shell-escape": "^0.2.0",
    "systeminformation": "^5.7.10",
    "ts.data.json": "^2.1.0"
  },
  "devDependencies": {
    "@scramjet/types": "^0.15.0",
    "@types/dockerode": "^3.2.2",
    "@types/node": "15.12.5",
    "@types/shell-escape": "^0.2.0",
    "ava": "^3.15.0",
    "ts-node": "^10.0.0",
    "typedoc": "0.21.2",
    "typedoc-plugin-markdown": "3.10.2",
    "typescript": "^4.3.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
