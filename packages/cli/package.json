{
  "name": "@scramjet/cli",
  "version": "0.16.0",
  "description": "This package is part of Scramjet Transform Hub. The package provides a CLI interface to communicate with Scramjet Transform Hub.",
  "main": "./src/index.ts",
  "bin": {
    "si": "./src/bin/index.ts"
  },
  "scripts": {
    "start": "ts-node ./src/bin/index",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist .bic_cache",
    "cloc": "cloc src --fullpath --include-lang TypeScript --not-match-d \"(node_modules|test|dist|bdd)\" --by-percent cm",
    "test": "echo no tests yet -- # npm run test:ava",
    "test:ava": "ava",
    "preinstall": "tar --version 2>&1 >/dev/null",
    "prepack": "node ../../scripts/publish.js",
    "postbuild": "yarn prepack"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/api-client": "^0.16.0",
    "commander": "^9.0.0",
    "minimatch": "^5.0.0",
    "scramjet": "^4.36.1",
    "tar": "^6.1.0"
  },
  "devDependencies": {
    "@types/minimatch": "^3.0.4",
    "@types/node": "^17.0.18",
    "@types/tar": "^6.1.1",
    "ava": "^4.0.1",
    "ts-node": "^10.0.0",
    "typedoc": "^0.22.11",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.3.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
