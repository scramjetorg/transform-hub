{
  "name": "@scramjet/cli",
  "version": "0.28.3",
  "description": "This package is part of Scramjet Transform Hub. The package provides a CLI interface to communicate with Scramjet Transform Hub.",
  "main": "./src/index.ts",
  "bin": {
    "si": "./src/bin/index.ts"
  },
  "scripts": {
    "start": "ts-node ./src/bin/index",
    "start:dev": "NODE_ENV=development ts-node ./src/bin/index",
    "build": "../../scripts/build-all.js --config-name=tsconfig.build.json --copy-dist",
    "clean": "rm -rf ./dist .bic_cache",
    "cloc": "cloc src --fullpath --include-lang TypeScript --not-match-d \"(node_modules|test|dist|bdd)\" --by-percent cm",
    "test": "npm run test:ava",
    "test:ava": "ava",
    "preinstall": "tar --version 2>&1 >/dev/null"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/api-client": "^0.28.3",
    "@scramjet/client-utils": "^0.28.3",
    "@scramjet/middleware-api-client": "^0.28.3",
    "@scramjet/obj-logger": "^0.28.3",
    "@scramjet/utility": "^0.28.3",
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "commander-completion": "^1.0.1",
    "find-package-json": "^1.2.0",
    "minimatch": "^3.1.2",
    "scramjet": "^4.36.7",
    "tar": "^6.1.11",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@scramjet/types": "^0.28.3",
    "@types/find-package-json": "^1.2.3",
    "@types/minimatch": "^3.0.5",
    "@types/node": "15.12.5",
    "@types/tar": "^6.1.2",
    "@types/validator": "^13.7.5",
    "ava": "^3.15.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10",
    "typedoc-plugin-markdown": "^3.13.4",
    "typescript": "^4.7.4"
  },
  "assets": [
    {
      "src": "src/completion",
      "dest": "completion"
    },
    {
      "src": "src/types/commander-completion.d.ts",
      "dest": "types/commander-completion.d.ts"
    }
  ],
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
