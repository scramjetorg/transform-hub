{
  "name": "@scramjet/sth",
  "version": "0.10.0-pre.10",
  "description": "Scramjet STH Excecutable",
  "main": "src/lib/index.ts",
  "bin": {
    "scramjet-transform-hub": "src/bin/hub.ts"
  },
  "scripts": {
    "start": "ts-node ./src/index",
    "build": "tsc -p tsconfig.build.json",
    "build:docker": "docker build -t ${SCRAMJET_INT_REPO_PATH}scramjetorg/hub:$npm_package_version -f Dockerfile ../../",
    "clean": "rm -rf ./dist .bic_cache",
    "watch": "tsc -b --watch",
    "test": "echo no tests yet -- # npm run test:ava",
    "test:ava": "ava",
    "prepack": "node ../../scripts/publish.js",
    "postbuild": "yarn prepack"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/host": "0.10.0-pre.10",
    "@scramjet/sth-config": "0.10.0-pre.10",
    "commander": "^8.0.0"
  },
  "devDependencies": {
    "@scramjet/types": "0.10.0-pre.10",
    "@types/node": "15.12.5",
    "ava": "^3.15.0",
    "ts-node": "^10.0.0",
    "typedoc": "0.21.2",
    "typedoc-plugin-markdown": "3.10.2",
    "typescript": "^4.3.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
