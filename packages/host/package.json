{
  "name": "@scramjet/host",
  "version": "0.23.1",
  "description": "This package is part of Scramjet Transform Hub. The package provides the main host subsystem of STH - starts API Servers, creates adapters etc.",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/index",
    "build": "../../scripts/build-all.js --config-name=tsconfig.build.json --copy-dist",
    "build:docs": "typedoc",
    "clean": "rm -rf ./dist .bic_cache",
    "cloc": "cloc src --fullpath --include-lang TypeScript --not-match-d \"(node_modules|test|dist|bdd)\" --by-percent cm",
    "test": "npm run test:ava",
    "test:ava": "ava",
    "prebuild": "yarn savehash",
    "postbuild": "rm -f ./src/build.info.json",
    "savehash": "node ../../scripts/hash-to-file.js ./src/"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/adapters": "^0.23.1",
    "@scramjet/api-server": "^0.23.1",
    "@scramjet/load-check": "^0.23.1",
    "@scramjet/model": "^0.23.1",
    "@scramjet/obj-logger": "^0.23.1",
    "@scramjet/sth-config": "^0.23.1",
    "@scramjet/symbols": "^0.23.1",
    "@scramjet/utility": "^0.23.1",
    "@scramjet/verser": "^0.23.1",
    "bpmux": "^8.2.0",
    "find-package-json": "^1.2.0",
    "http-status-codes": "^2.2.0",
    "minimist": "^1.2.6",
    "rereadable-stream": "^1.4.13",
    "scramjet": "^4.36.6",
    "systeminformation": "^5.11.14"
  },
  "devDependencies": {
    "@scramjet/types": "^0.23.1",
    "@types/find-package-json": "^1.2.2",
    "@types/node": "15.12.5",
    "ava": "^3.15.0",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
