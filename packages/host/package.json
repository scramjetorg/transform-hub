{
  "name": "@scramjet/host",
  "version": "0.12.1",
  "description": "This package is part of Scramjet Transform Hub. The package provides the main host subsystem of STH - starts API Servers, creates adapters etc.",
  "main": "./src/index.ts",
  "bin": {
    "scramjet-host": "bin/start.ts"
  },
  "scripts": {
    "start": "ts-node ./src/index",
    "build": "tsc -p tsconfig.build.json",
    "build:docs": "typedoc",
    "clean": "rm -rf ./dist .bic_cache",
    "test": "npm run test:ava",
    "test:ava": "ava",
    "prepack": "node ../../scripts/publish.js",
    "postbuild": "yarn prepack"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/adapters": "^0.12.1",
    "@scramjet/api-server": "^0.12.1",
    "@scramjet/load-check": "^0.12.1",
    "@scramjet/logger": "^0.12.1",
    "@scramjet/model": "^0.12.1",
    "@scramjet/sth-config": "^0.12.1",
    "@scramjet/supervisor": "^0.12.1",
    "@scramjet/symbols": "^0.12.1",
    "bpmux": "^8.1.3",
    "find-package-json": "^1.2.0",
    "http-status-codes": "^2.1.4",
    "minimist": "^1.2.5",
    "scramjet": "^4.36.0",
    "systeminformation": "^5.7.10",
    "rereadable-stream": "^1.4.12"
  },
  "devDependencies": {
    "@scramjet/types": "^0.12.1",
    "@types/find-package-json": "^1.2.1",
    "@types/node": "15.12.5",
    "ava": "^3.15.0",
    "ts-node": "^10.0.0",
    "typedoc": "^0.22.5",
    "typedoc-plugin-markdown": "^3.11.2",
    "typescript": "^4.3.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
