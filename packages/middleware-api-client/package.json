{
    "name": "@scramjet/middleware-api-client",
    "version": "0.18.7",
    "description": "Scramjet Middleware API Client",
    "main": "src/index.ts",
    "scripts": {
        "build": "tsc -p tsconfig.build.json && yarn build:browser",
        "build:browser": "esbuild ./src/index.ts --outdir=bundle --bundle --tsconfig=tsconfig.build.json --target=chrome58 --global-name=SCPClient && yarn build:browser:types",
        "build:browser:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.build.json --outDir bundle",
        "clean": "rm -rf ./dist .bic_cache",
        "watch": "tsc -b --watch",
        "test": "npm run test:ava",
        "test:ava": "ava",
        "prepack": "node ../../scripts/publish.js",
        "postbuild": "yarn prepack"
    },
    "dependencies": {
        "@scramjet/api-client": "^0.18.7",
        "@scramjet/client-utils": "^0.18.7",
        "@scramjet/manager-api-client": "^0.18.7",
        "@scramjet/multi-manager-api-client": "^0.18.7"
    },
    "devDependencies": {
        "@scramjet/types": "^0.18.7",
        "ava": "^3.15.0",
        "esbuild": "0.14.23",
        "ts-node": "^10.7.0",
        "typedoc": "^0.22.12",
        "typedoc-plugin-markdown": "^3.11.14",
        "typescript": "^4.5.5"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "files": [
            "**/*.spec.ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "author": "Scramjet <open-source@scramjet.org>",
    "license": "AGPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/scramjetorg/scramjet-cpm-dev.git"
    }
}
