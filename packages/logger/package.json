{
  "name": "@scramjet/logger",
  "version": "0.10.0-pre.10",
  "description": "Important basic logger",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/index",
    "build": "tsc -p tsconfig.build.json",
    "build:docs": "typedoc",
    "watch": "tsc -b --watch",
    "test": "npm run test:ava",
    "test:ava": "nyc ava",
    "clean": "rm -rf ./dist .bic_cache",
    "prepack": "node ../../scripts/publish.js",
    "postbuild": "yarn prepack"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@scramjet/types": "0.10.0-pre.10",
    "@types/node": "15.12.5",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.0.0",
    "typedoc": "0.21.2",
    "typedoc-plugin-markdown": "3.10.2",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "scramjet": "4.35.20"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
