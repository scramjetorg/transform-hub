{
  "name": "@scramjet/verser",
  "version": "0.20.0",
  "description": "This package is part of Scramjet Transform Hub. The package provides a reverse server functionality used among Scramjet modules.",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/bin/index",
    "build": "../../scripts/build-all.js --config-name=tsconfig.build.json",
    "clean": "rm -rf ./dist .bic_cache",
    "test": "npm run test:ava",
    "test:ava": "ava",
    "prepack": "node ../../scripts/publish.js",
    "postbuild": "yarn prepack"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/obj-logger": "^0.20.0",
    "@scramjet/utility": "^0.20.0",
    "bpmux": "^8.2.0"
  },
  "devDependencies": {
    "@scramjet/api-server": "^0.20.0",
    "@scramjet/types": "^0.20.0",
    "@types/node": "15.12.5",
    "ava": "^3.15.0",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.12",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.5.5"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
