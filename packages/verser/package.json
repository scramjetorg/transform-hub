{
  "name": "@scramjet/verser",
  "version": "0.15.0",
  "description": "This package is part of Scramjet Transform Hub. The package provides a reverse server functionality used among Scramjet modules.",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/bin/index",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist .bic_cache",
    "test": "echo no tests yet -- # npm run test:ava",
    "test:ava": "ava",
    "prepack": "node ../../scripts/publish.js",
    "postbuild": "yarn prepack"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/obj-logger": "^0.15.0",
    "@scramjet/utility": "^0.15.0",
    "bpmux": "^8.1.3"
  },
  "devDependencies": {
    "@scramjet/types": "^0.15.0",
    "@types/node": "15.12.5",
    "ava": "^3.15.0",
    "ts-node": "^10.0.0",
    "typedoc": "^0.22.5",
    "typedoc-plugin-markdown": "^3.11.2",
    "typescript": "^4.3.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/transform-hub.git"
  }
}
